/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/phoenix -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

includeConfig 'juno_resources.config'

process {
  beforeScript = "module load singularity/3.7.1; unset R_LIBS; catch_term () { echo 'caught USR2/TERM signal'; set +e; false; on_exit ; } ; trap catch_term USR2 TERM"
  maxRetries = 3

  singularity.cacheDir = "/juno/work/ci/dev/dev_phoenix/singularity_cachedir"

 // executor = "lsf"
//  clusterOptions = "-sla CMOVOYAGER"
//  queueSize = 500
//  perJobMemLimit = true
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Genome references
    fasta = "GRCh37"
    assay = "IMPACT468"
    genome_file = "${params.genomes[ params.fasta ][ 'fasta' ]}"
    genome_index_dict = "${genome_file.replaceAll('fasta$','dict')}"
    genome_index = ["${genome_file}.fai","${genome_file}.amb","${genome_file}.ann","${genome_file}.bwt","${genome_file}.pac","${genome_file}.sa","${genome_index_dict}"]
    assay_coverage_info = "${params.assay_coverage}"
    impact_complex_nn = 0.2
    impact_complex_tn = 0.5
    default_complex_nn = 0.1
    default_complex_tn = 0.2
    intervals = "${params.genomes[params.fasta]['intervals']}"
    bed_file = "${params.targets[params.assay]['baits_bed']}"
    curated_bam_path = "${params.curated_bams[params.assay]}"
    exac_filter = "${params.resources.exac_filter}"
    exac_filter_index = "${exac_filter}.tbi"
    dbsnp = "${params.genomes[params.fasta]['facets_snps']}"
    cosmic = "${params.genomes[params.fasta]['cosmic']}"
    hotspot = "${params.resources.hotspot}"
}
